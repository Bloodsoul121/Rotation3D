<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    tools:context=".MainActivity"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/big_radiance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sign_in_radiance_big" />

    <ImageView
        android:id="@+id/big_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sign_in_gold_card_front_big" />

    <ImageView
        android:id="@+id/big_card_gift"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toTopOf="@+id/big_card_gift_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/big_card"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/sign_in_treasure_box_icon" />

    <TextView
        android:id="@+id/big_card_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="#FF860D"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/big_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/big_card_gift"
        tools:text="Ã—99" />

</androidx.constraintlayout.widget.ConstraintLayout>